{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Jest Single Run",
            "program": "${workspaceRoot}/node_modules/jest/bin/jest.js",
            "args": [
                "-c",
                "./config/test/jest.json",
                "--verbose",
                "-i",
                "--no-cache"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Jest watch Run",
            "program": "${workspaceRoot}/node_modules/jest/bin/jest.js",
            "args": [
                "-c",
                "./config/test/jest.json",
                "--verbose",
                "-i",
                "--no-cache",
                "--watchAll"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}